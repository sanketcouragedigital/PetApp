<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeDialogList">

        <ImageView
                android:id="@+id/iconimage"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_8sdp"/>

        <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listItemText"
                android:ellipsize="marquee"
                android:layout_toRightOf="@+id/iconimage"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_105sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="upload pet list"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                />
    </RelativeLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/relativeDialogList">
        <View
                android:id="@+id/viewDialogDivider"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"/>
    </FrameLayout>
</RelativeLayout>