<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/campaignFromScrollView">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/campaignFormLayout"
                        android:focusable="true"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:focusableInTouchMode="true">
            <EditText
                    android:id="@+id/txtNGOName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="NGO Name"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="0.52"/>
            <EditText
                    android:id="@+id/txtCampaignName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Campaign Name"
                    android:layout_below="@+id/txtNGOName"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="0.52"/>
            <EditText
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="Description"
                    android:layout_below="@+id/txtCampaignName"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="0.52"/>
            <EditText
                    android:id="@+id/txtCampaignActualAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Campaign Actual Amount"
                    android:layout_below="@+id/txtDescription"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="0.52"/>
            <CheckBox
                    android:id="@+id/chkMinmumAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Want To Set Minimum Amount"
                    android:checked="false"
                    android:layout_below="@+id/txtCampaignActualAmount"
                    android:layout_marginTop="@dimen/_16sdp"/>
            <EditText
                    android:id="@+id/txtMinmumAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Campaign Miminum Amount"
                    android:layout_below="@+id/chkMinmumAmount"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="0.52"/>
            <TextView
                    android:id="@+id/txtCampaignLastDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Campaign Close Date"
                    android:layout_below="@+id/txtMinmumAmount"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:drawableRight="@drawable/calendar"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="0.52"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Image"
                    android:textColor="@color/btnsignuptext"
                    android:background="@null"
                    android:id="@+id/selectImage"
                    android:theme="@style/Base.Theme.AppCompat"
                    android:layout_below="@+id/txtCampaignLastDate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="@dimen/_30sdp"
                          android:layout_below="@+id/selectImage">
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstImageOfPet"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondImageOfPet"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/thirdImageOfPet"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/campaignFormSubmitFab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:src="@drawable/form_submit"
            app:layout_anchor="@id/campaignFormLayout"
            app:layout_anchorGravity="bottom|right|end"
            app:elevation="@dimen/_6sdp"
            app:fabSize="normal"
            app:backgroundTint="#DA4836"
            app:layout_behavior="com.couragedigital.peto.Behaviours.ScrollAwareFABBehavior"/>
</android.support.design.widget.CoordinatorLayout>

