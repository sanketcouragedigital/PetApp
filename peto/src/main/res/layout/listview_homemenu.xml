<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/relativelayouthome"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView
                android:id="@+id/titletxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/drawer_header_text"
                android:layout_marginTop="@dimen/_45sdp"
                android:singleLine="true"
                android:text="View/List Pets"/>

        <View
                android:id="@+id/viewline"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/drawer_header_text"
                android:layout_below="@id/titletxt"
                android:layout_alignStart="@+id/titletxt"
                android:layout_alignEnd="@+id/titletxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"/>

        <TextView
                android:id="@+id/descriptiontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/viewline"
                android:textColor="@color/drawer_header_text"
                android:layout_marginTop="@dimen/_8sdp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>


