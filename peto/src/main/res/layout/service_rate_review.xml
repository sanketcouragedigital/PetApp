<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:weightSum="1">
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/clinicRateNReview_card_view"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/_1sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardLayout">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceName"
                    android:layout_weight="0.08"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:gravity="center"/>
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/serviceRatingBar"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_below="@+id/serviceName"
                    android:progressTint="#F2B50F"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceFeedback"
                    android:hint="Feedback"
                    android:layout_below="@+id/serviceRatingBar"
                    android:textColor="@color/textColorPrimary"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/btnFeedbackSubmit"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/serviceFeedback"
                    android:textColor="#CF3E3E"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>