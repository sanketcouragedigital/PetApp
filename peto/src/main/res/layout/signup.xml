<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/signinbackground">
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/_2sdp"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/lblsignin"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_centerHorizontal="true"
                    android:text="SIGN UP"
                    android:textColor="@color/signinlblcolor"
                    android:id="@+id/signInTextView"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" I am NGO"
                    android:id="@+id/chkIsNgo"
                    android:layout_below="@+id/signInTextView"
                    android:checked="false"
                    android:layout_marginTop="@dimen/_16sdp"/>


                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputLayouNgoUrl"
                        android:layout_below="@+id/textInputLayoutname"
                        android:theme="@style/cardTheme">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="NGO Url"
                            android:id="@+id/txtNgoUrl"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:textColor="@color/edittext"/>
                </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutname"
                    android:layout_below="@+id/chkIsNgo"
                    android:theme="@style/cardTheme">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Name"
                        android:id="@+id/txtname"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:textColor="@color/edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutbuildingname"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayouNgoUrl">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Building Name"
                        android:id="@+id/txtbuildingname"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutarea"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutbuildingname">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Area "
                        android:id="@+id/txtarea"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutcity"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutarea">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="City "
                        android:id="@+id/txtcity"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutmobile"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutcity">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="Mobile No "
                        android:id="@+id/txtmobileno"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutemail"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutmobile">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:id="@+id/txtemail"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutpassword"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutemail">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:id="@+id/txtpassword"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutconfirmpassword"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutpassword">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Confirm Password"
                        android:id="@+id/txtconfirmpassword"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/edittext"
                        android:layout_marginTop="@dimen/_16sdp"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Submit"
                    android:id="@+id/btnsignup"
                    android:layout_below="@+id/textInputLayoutconfirmpassword"
                    android:layout_toLeftOf="@+id/btncancel"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/btnsignuptext"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@null"/>
            <Button
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Cancel"
                    android:id="@+id/btncancel"
                    android:layout_below="@+id/textInputLayoutconfirmpassword"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/btnsignuptext"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@null"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>