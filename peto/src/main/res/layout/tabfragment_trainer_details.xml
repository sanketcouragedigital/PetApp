<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/trainerDetailsCoordinatorLayout">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/pettrainerDetailsAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/trainerDetailsCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                    android:id="@+id/pettrainerHeaderImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_72sdp"
                    android:background="@drawable/petdetail_image_background_gradient"
                    android:layout_gravity="center_horizontal|bottom"/>
            <android.support.v7.widget.Toolbar
                    android:id="@+id/pettrainerDetailsToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pettrainerDetailsNestedScrollView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
                android:id="@+id/containerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trainerFirstRelativeLayout">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:id="@+id/LinearLayoutForImageButtons">
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/trainerDetailCallButton"
                            android:background="@android:color/transparent"
                            android:textColor="#CF3E3E"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/call24dp"/>
                    <View
                            android:id="@+id/trainerDetailsButtonDivider"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/trainerDetailsRateNReviewButton"
                            android:background="@android:color/transparent"
                            android:textColor="#CF3E3E"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/rnr24dp"/>
                    <View
                            android:id="@+id/trainerDetailsButtonDivider2"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/trainerDetailsMapButton"
                            android:background="@android:color/transparent"
                            android:textColor="#CF3E3E"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/map24dp"/>
                </LinearLayout>
                <View
                        android:id="@+id/trainerTabButtonDivider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="@color/drawer_header_text"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/LinearLayoutForImageButtons"/>
            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addresslayout"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textColor="#cf3e3e"
                        android:textStyle="bold"
                        android:id="@+id/pettrainerAddressLabel"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abcd Xyzz"
                        android:id="@+id/pettrainerAddress"
                        android:layout_alignTop="@+id/pettrainerAddressLabel"
                        android:layout_marginLeft="@dimen/_112sdp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Timing:"
                        android:textColor="#cf3e3e"
                        android:textStyle="bold"
                        android:id="@+id/pettrainerTimeLabel"
                        android:layout_below="@+id/pettrainerAddress"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:id="@+id/pettrainerNotes"
                        android:layout_alignTop="@+id/pettrainerTimeLabel"
                        android:layout_alignLeft="@+id/pettrainerAddress"
                        android:layout_alignStart="@+id/pettrainerAddress"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textColor="#cf3e3e"
                        android:textStyle="bold"
                        android:id="@+id/pettrainerDescriptionLabel"
                        android:layout_below="@+id/pettrainerNotes"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:id="@+id/pettrainerDescription"
                        android:layout_alignTop="@+id/pettrainerDescriptionLabel"
                        android:layout_alignLeft="@+id/pettrainerAddress"
                        android:layout_alignStart="@+id/pettrainerAddress"/>
                <View
                        android:id="@+id/trainerAddressDividerLine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="@color/drawer_header_text"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/pettrainerDescription"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reviews:"
                    android:textColor="#cf3e3e"
                    android:id="@+id/reviewsLabel"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/trainerRateNReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
