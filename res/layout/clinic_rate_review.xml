<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinicName"
            android:textStyle="bold"
            android:text="Clinic Name"
            android:layout_weight="2"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:layout_alignParentTop="true"/>
    <RatingBar
            android:id="@+id/clinicRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="16dp"
            android:layout_gravity = "center_horizontal"
            android:isIndicator="true"
            android:layout_below="@+id/clinicName"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:hint="Feedback"
            android:id="@+id/clinicFeedback"
            android:layout_below="@+id/clinicRatingBar"
            android:textColor="@color/edittext"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btnFeedbackSubmit"
            android:textColor="@color/btnsignuptext"
            android:background="@null"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/clinicFeedback"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>