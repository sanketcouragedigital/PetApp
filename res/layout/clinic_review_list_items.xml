<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res/com.couragedigital.petapp"
            android:id="@+id/clinicReviewsitems_cardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reviewLayout">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/usersName"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/ratingNos"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/usersName"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/reviews"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ratingNos"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <View
            android:id="@+id/viewdividerline"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/drawer_header_text"
            android:layout_below="@id/reviewLayout"
            android:layout_centerHorizontal="true"/>
    </android.support.v7.widget.CardView>
</LinearLayout>