<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/drawerItemIcon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_launcher"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/drawerItemText"
              android:layout_marginLeft="30dp"
              android:layout_toRightOf="@+id/drawerItemIcon"
              android:text="Hello"
              android:textColor="@color/list_pet_origin_text_color"
              android:textAppearance="?android:attr/textAppearanceListItemSmall"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="24dp"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/drawerItemText">
        <View
                android:id="@+id/drawerDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/edittxtcolor"/>
    </FrameLayout>
</RelativeLayout>
