<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_marginTop="524px"
            android:layout_marginLeft="126px"
            android:layout_marginRight="126px"
            android:layout_width="@dimen/signincard_width"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="48px"
                android:layout_marginRight="48px"
                android:layout_marginTop="48px"
                android:layout_marginEnd="24px"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardLayout">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutEmail"
                    android:theme="@style/cardTheme">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:id="@+id/feedbackEmail"
                        android:hint="Email"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/edittext"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutFeedback"
                    android:theme="@style/cardTheme"
                    android:layout_below="@+id/textInputLayoutEmail">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:id="@+id/feedbackOfUser"
                        android:hint="Feedback"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentStart="true"
                        android:textSize="15sp"
                        android:textColor="@color/edittext"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/feedbackSubmit"
                    android:layout_below="@+id/textInputLayoutFeedback"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:textColor="@color/btnsignuptext"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>