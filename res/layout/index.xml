<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/form_upload"
            android:id="@+id/uploadFormDetails"
            android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_pets_details"
            android:id="@+id/listOfPets"
            android:layout_below="@+id/uploadFormDetails" android:layout_alignParentStart="true"/>
</RelativeLayout>