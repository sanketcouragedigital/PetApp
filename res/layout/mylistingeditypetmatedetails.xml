<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.couragedigital.petapp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/myListingPetMateApplyScrollView">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:focusableInTouchMode="true">
            <TextView
                    android:id="@+id/myListingPetMateSelectedCategory"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="@color/edittxtcolor"/>

            <TextView
                    android:id="@+id/myListingPetMateChangeCategory"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:text="Change To"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="@color/edittxtcolor"
                    android:layout_below="@+id/myListingPetMateSelectedCategory"/>

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/myListingEditPetMateCategory"
                    android:layout_toRightOf="@+id/myListingPetMateChangeCategory"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/myListingPetMateSelectedCategory"/>

            <TextView
                    android:id="@+id/myListingPetMateSelectedBreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="breed"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="@color/edittxtcolor"
                    android:layout_below="@+id/myListingEditPetMateCategory"/>
            <TextView
                    android:id="@+id/myListingPetMateChangeBreed"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:text="Change To"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="@color/edittxtcolor"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myListingPetMateSelectedBreed" />

            <TextView
                    android:id="@+id/myListingPetMateCurrentAge"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="16dp"
                    android:text="Current Age"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="@color/edittxtcolor"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myListingPetMateChangeBreed" />


            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/myListingEditPetMateBreed"
                    android:layout_below="@+id/myListingPetMateSelectedBreed"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/myListingPetMateChangeBreed"/>


            <TextView
                    android:id="@+id/myListingEditPetMateAgeOfPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Age To"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="@color/edittxtcolor"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/myListingPetMateCurrentAge"
                    android:layout_marginTop="20dp"/>
            <Spinner
                    android:id="@+id/myListingEditPetMateAgeInMonths"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_alignTop="@+id/myListingEditPetMateAgeOfPet"
                    android:layout_toRightOf="@+id/myListingEditPetMateAgeOfPet"/>
            <Spinner
                    android:id="@+id/myListingEditPetMateAgeInYears"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_alignTop="@+id/myListingEditPetMateAgeOfPet"
                    android:layout_toRightOf="@+id/myListingEditPetMateAgeInMonths"/>

            <TextView
                    android:id="@+id/myListingEditPetMateGender"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="4"
                    android:text="Gender"
                    android:textSize="22sp"
                    android:textColor="@color/edittxtcolor"
                    android:layout_marginTop="35dp"
                    android:layout_below="@+id/myListingEditPetMateAgeOfPet"
                    android:layout_alignParentStart="true"/>

            <RadioGroup
                    android:id="@+id/myListingEditPetMateGenderRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_below="@+id/myListingEditPetMateAgeOfPet"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@+id/myListingEditPetMateGender">

                <RadioButton android:id="@+id/myListingEditPetMateGenderMale"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginRight="16dp"
                             android:text="@string/pet_gender_male"/>

                <RadioButton android:id="@+id/myListingEditPetMateGenderFemale"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/pet_gender_female"/>
            </RadioGroup>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/myListingEditPetMateDescription"
                    android:hint="Description"
                    android:textColor="@color/textColorPrimary"
                    android:lines="2"
                    android:gravity="top|left"
                    android:scrollbars="vertical"
                    android:layout_below="@+id/myListingEditPetMateGenderRadioGroup"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>
        </RelativeLayout>
    </ScrollView>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/myListingPetMateSubmitFloatingButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/form_submit"
                app:layout_anchor="@id/myListingPetMateApplyScrollView"
                app:layout_anchorGravity="bottom|right|end"
                app:elevation="6dp"
                app:fabSize="normal"
                app:backgroundTint="#DA4836"/>

</android.support.design.widget.CoordinatorLayout>

