<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 android:id="@+id/clinicDetailsCoordinatorLayout">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/petClinicDetailsAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/clinicDetailsCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                    android:id="@+id/petClicnicHeaderImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    android:title="Collapsing Toolbar"
                    app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/petClinicDetailsNestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll|enterAlways">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res/com.couragedigital.petapp"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:weightSum="1"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <View
                android:id="@+id/clinicImageDivider"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/drawer_header_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/petClicnicHeaderImage"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/LinearLayoutForImageButtons">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/clinicDetailCallButton"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Call"
                        android:textColor="#CF3E3E"
                        android:layout_weight="1"
                        android:src="@drawable/call24dp"/>
                <View
                        android:id="@+id/clinicDetailsButtonDivider"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/drawer_header_text"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>


                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clinicDetailsRateNReviewButton"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Rate and Reviews"
                        android:textColor="#CF3E3E"
                        android:layout_weight="1"
                        android:src="@drawable/rnr24dp"
                />

            </LinearLayout>
            <View
                    android:id="@+id/clinicTabButtonDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/drawer_header_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/LinearLayoutForImageButtons"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adresslayout"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/LinearLayoutForAddress">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/petClinicAddress"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/locationview"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/petClinicNotes"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/locationview"
                    android:layout_below="@id/petClinicAddress"
                    android:layout_marginBottom="5dp"/>

        </RelativeLayout>
        <View
                android:id="@+id/clinicAddressDividerLine"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/drawer_header_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/LinearLayoutForAddress"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewsLabel"
                android:hint="Reviews"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="@dimen/petName"
                android:textStyle="bold"
                android:textColor="@color/list_pet_origin_text_color"
                android:ellipsize="end"
                android:layout_alignParentTop="true"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/clinicRateNReview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>