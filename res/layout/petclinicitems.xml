<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res/com.couragedigital.petapp"
            android:id="@+id/clinicitems_cardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/petClinicImageRelativeLayout"
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                <com.couragedigital.petapp.CustomImageView.RoundedNetworkImageView
                        android:id="@+id/clinicImage"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="17dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/clinicContentRelativeLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/petClinicImageRelativeLayout">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clinicName"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="@dimen/petName"
                        android:textStyle="bold"
                        android:textColor="@color/list_pet_origin_text_color"
                        android:ellipsize="end"
                        android:layout_alignParentTop="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clinicAddress"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end"
                        android:textColor="@color/textColorPrimary"
                        android:layout_below="@+id/clinicName"/>
            </RelativeLayout>
            <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:id="@+id/clinicDividerLine"-->
                    <!--android:layout_below="@+id/clinicContentRelativeLayout"/>-->

            <!--<Button-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/clinicSeeMoreButton"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_below="@+id/clinicDividerLine"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:text="See More"-->
                    <!--android:textColor="#CF3E3E"-->
                    <!--android:textSize="14sp"/>-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>