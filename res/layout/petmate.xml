<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/applyPetMateScrollView">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:focusableInTouchMode="true">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/petMateCategorySpinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/petMateBreedSpinner"
                    android:layout_below="@+id/petMateCategorySpinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"/>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/petMateAgeLayout"
                          android:orientation="horizontal"
                          android:layout_marginTop="16dp"
                          android:layout_below="@id/petMateBreedSpinner">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:textSize="16sp"
                        android:textColor="@color/edittxtcolor"
                        android:id="@+id/ageOfPetMate"
                        android:hint="Age"
                        android:layout_weight="0.6"/>
                <Spinner
                        android:id="@+id/ageOfPetMateInMonths"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.2"/>
                <Spinner
                        android:id="@+id/ageOfPetMateInYears"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.2"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/petMateGenderLayout"
                          android:orientation="horizontal"
                          android:layout_marginTop="16dp"
                          android:layout_below="@id/petMateAgeLayout">
                <TextView
                        android:id="@+id/petMateGender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="Gender"
                        android:textSize="16sp"
                        android:textColor="@color/edittxtcolor"
                        android:layout_weight="0.6"/>
                <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/genderOfPetMate"
                        android:layout_weight="1.4">
                    <RadioButton
                            android:id="@+id/genderMalePetMate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/pet_gender_male"
                            android:layout_weight="1"/>
                    <RadioButton
                            android:id="@+id/genderFemalePetMate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/pet_gender_female"
                            android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/descriptionOfPetMate"
                    android:hint="Description"
                    android:textColor="@color/textColorPrimary"
                    android:lines="2"
                    android:gravity="top|left"
                    android:scrollbars="vertical"
                    android:layout_below="@+id/petMateGenderLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Image"
                    android:textColor="@color/btnsignuptext"
                    android:background="@null"
                    android:id="@+id/selectImagePetMate"
                    android:theme="@style/Base.Theme.AppCompat"
                    android:layout_below="@+id/descriptionOfPetMate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="30dp"
                          android:layout_below="@+id/selectImagePetMate">
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstImageOfPetMate"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondImageOfPetMate"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/thirdImageOfPetMate"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/petMateFormSubmitFab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/form_submit"
            app:layout_anchor="@id/applyPetMateScrollView"
            app:layout_anchorGravity="bottom|right|end"
            app:elevation="6dp"
            app:fabSize="normal"
            app:backgroundTint="#DA4836"/>
</android.support.design.widget.CoordinatorLayout>

