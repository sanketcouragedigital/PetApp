<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res/com.couragedigital.peto"
            android:id="@+id/shelteritems_cardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            card_view:cardCornerRadius="@dimen/_2sdp"
            card_view:cardElevation="@dimen/_2sdp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/shelterListImageAndNameContentLayout">

                <RelativeLayout
                        android:id="@+id/petShelterImageRelativeLayout"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp">

                    <ImageView
                            android:id="@+id/shelterImage"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_17sdp"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/petShelterListContentRelativeLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_toRightOf="@+id/petShelterImageRelativeLayout">

                    <TextView
                            android:id="@+id/shelterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:textSize="@dimen/_17sdp"
                            android:textStyle="bold"
                            android:textColor="@color/list_pet_origin_text_color"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/shelterAddress"
                            android:textColor="@color/textColorPrimary"
                            android:layout_below="@+id/shelterName"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_16sdp"/>

                </RelativeLayout>
            </RelativeLayout>

