<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme"
           parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:textColorPrimary">@color/windowBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="cardTheme">
        <item name="android:textColorHint">@color/edittxtcolor</item>//hint color And Label Color in False State
        <item name="colorAccent">@color/colorAccent</item> //Label color in True State And Bar Color False And True State
        <item name="colorControlNormal">@color/edittxtcolor</item>
        <item name="colorControlActivated">@color/btnsignuptext</item>
    </style>

    <style name="HomePageDialogboxCustom" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>